{
    "include": ["src/**/*"],
    "compilerOptions": {
        "outDir": "dist",
        "strict": true,
        "target": "es5",
        "declaration": true,
        "sourceMap": true,
        "module": "CommonJS",
        "moduleResolution": "node",
        "types": [
            "node"
        ],
        "lib": [
            "ES2021"
        ]
    },
    "exclude": [
        "**/*.test.*",
        "node_modules",
        "dist"
    ],
}
